{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@abstracts/*": ["src/abstracts/*"],
      "@common/*": ["src/common/*"],
      "@utils/*": ["src/utils/*"],
      "@budget/*": ["src/budget/*"],
      "@expense/*": ["src/expense/*"],
      "@account/*": ["src/account/*"],
      "@user/*": ["src/user/*"],
      "@transaction/*": ["src/transaction/*"],
      "@category/*": ["src/category/*"],
      "@auth/*": ["src/auth/*"]
    }
  },
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"]
}
